<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/svg+xml" href="https://example.com/image.svg">
    <title>CCBT</title>
    <link rel="stylesheet" href="/stylesheets/new.css">
</head>
<body>
    <%- include('./partials/navbar') %>
    <div id="new-header">
        Edit this Account
    </div>
   
    <div >
        <form class="new-form" action="/accts/<%=card._id%>?_method=PUT" method="POST">
            <div>
                <label for="bank">Bank:</label>
                <input type="text" name="bank" value="<%=card.bank%>">
            </div>
            <div>
                <label for="card">Card:</label>
                <input type="text" name="card" value="<%=card.card%>">
            </div>
            <div>
                <label for="type">Type:</label>
                <select name="type">
                    <option value="VISA">VISA</option>
                    <option value="MASTERCARD">MASTERCARD</option>
                    <option value="AMEX">AMEX</option>
                    <option value="DISCOVER">DISCOVER</option>
                </select>
            </div>
            <div>
                <label for="balance">Balance $:</label>
                <input type="number" name="balance" value="<%=card.balance%>">
            </div>
            <div>
                <label for="longTermAPR">Long Term APR %:</label>
                <input type="number" step="0.01" name="longTermAPR" value="<%=card.longTermAPR%>">
            </div>
            <div>

                <label for="tempAPR">Temp APR %:</label>
                <input type="number" step="0.01" name="tempAPR" value="<%=card.tempAPR%>" >
            </div>
            <div>
                <label for="tempAPRDate">Temp APR end date:</label>
                <input type="date" name="tempAPRDate" value="<%=card.tempAPRDate%>">
            </div>
            <div>
                <label for="balanceTransferAPR">Balance Transfer APR %:</label>
                <input type="number" step="0.01" name="balanceTransferAPR" value="<%=card.balanceTransferAPR%>">
            </div>
            <div>
                <label for="balanceAmountAvail">Balance Transfer Amount Available $:</label>
                <input type="number" name="balanceAmountAvail" value="<%=card.balanceAmountAvail%>">
            </div>
    
            <input type="submit" id="new-submit-btn" value ="Add Account">

        </form>
    </div>
</body>
</html>